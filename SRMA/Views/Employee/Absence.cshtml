@model IEnumerable<SRMA.Entities.EmployeeInfoEntity>

@{
    ViewData["Title"] = "Ausencias";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}



<html>
<body>
    <div class="main-content">

        <div class="page-content">
            <div class="container-fluid">
            </div>
            <div class="row">
                <div class="col-xl-10">
                    <div class="card">
                        <div class="card-body">

                            <h2 class="card-title text-center">Ausencias</h2>
                            <br />

                            <div>
                            </div>
                            <div class="table-responsive">
                                <table class="table table-centered table-striped table-nowrap">
                                    <thead>
                                        <tr>
                                            <th>
                                                Nombre
                                            </th>
                                            <th>
                                                Apellido
                                            </th>
                                            <th>
                                                Cantidad dias
                                            </th>
                                            <th>
                                                Fecha inicio
                                            </th>
                                            <th>
                                                Fecha finalización
                                            </th>

                                            <th>Acciones</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{
                                            var sortedModel = Model.OrderBy(item => Math.Abs((item.inDay - DateTime.Now).TotalDays));
                                        }
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td class="table-user">@item.userName</td>

                                                <td>
                                                    @item.lastName
                                                </td>
                                                <td>
                                                    @item.dReq
                                                </td>
                                                <td>
                                                    @item.inDay.ToString("dd-MM-yyyy")
                                                </td>
                                                <td>
                                                    @item.enDay.ToString("dd-MM-yyyy")
                                                </td>
                                                <td>
                                                    <a href="@Url.Action("AbsenceEdit","Employee", new { IdUser = item.IdUser })" class="btn btn-info">
                                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
                                                            <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z"></path>
                                                        </svg>
                                                    </a>

                                                    <button class="btn btn-danger delete-employee" data-employee-id="@item.idVA">
                                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash3" viewBox="0 0 16 16">
                                                            <path d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5ZM11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H2.506a.58.58 0 0 0-.01 0H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1h-.995a.59.59 0 0 0-.01 0H11Zm1.958 1-.846 10.58a1 1 0 0 1-.997.92h-6.23a1 1 0 0 1-.997-.92L3.042 3.5h9.916Zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 0 1-.998.06L5 5.03a.5.5 0 0 1 .47-.53Zm5.058 0a.5.5 0 0 1 .47.53l-.5 8.5a.5.5 0 1 1-.998-.06l.5-8.5a.5.5 0 0 1 .528-.47ZM8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5Z"></path>
                                                        </svg>
                                                    </button>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>

                        </div> <!-- end card-body-->
                    </div> <!-- end card-->
                </div> <!-- end col -->
            </div>
            <!-- end row-->

        </div> <!-- container-fluid -->
    </div>
    <div class="modal" id="confirmationModal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirmación</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>¿Estás seguro de que deseas eliminar este producto?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                    <button type="button" class="btn btn-danger" id="confirmDelete">Eliminar</button>
                </div>
            </div>
        </div>
    </div>


    <script>
        $(document).ready(function () {
            var employeeIdToDelete;

            $(".delete-employee").click(function () {
                employeeIdToDelete = $(this).data("employee-id");

                // Utiliza SweetAlert para mostrar el pop-up de confirmación
                Swal.fire({
                    title: '¿Estás seguro?',
                    text: "Esta acción no se puede deshacer",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonText: 'Sí, eliminar',
                    cancelButtonText: 'Cancelar'
                }).then((result) => {
                    if (result.isConfirmed) {
                        // Realizar una solicitud POST para eliminar el producto
                        $.ajax({
                            url: "@Url.Action("DeleteRequestAbs", "Employee")",
                            method: "POST",
                            data: { idVA: employeeIdToDelete },
                            success: function (result) {
                                // Manejar la respuesta del servidor
                                if (result.success) {
                                    Swal.fire('Error', 'No se pudo eliminar solicitud', 'error');
                                } else {
                                    Swal.fire('Éxito', 'La solicitud se ha eliminado', 'success').then(function () {
                                        window.location.href = "@Url.Action("Absence")";
                                    });
                                }
                            },
                            error: function () {
                                Swal.fire('Error', 'Hubo un error en la solicitud', 'error');
                            }
                        });
                    }
                });
            });
        });
    </script>
</body>
</html>
