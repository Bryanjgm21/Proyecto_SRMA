@model SRMA.Entities.UserEntity

@{
    ViewData["Title"] = "ChangePassword";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}


<div>
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="d-flex align-items-center min-vh-100">
                    <div class="w-100 d-block bg-white shadow-lg rounded my-5">
                        <div class="row">
                            <div class="col-lg-5 d-none d-lg-block bg-login rounded-left"></div>
                            <div class="col-lg-7">
                                <div class="p-5">
                                    <div class="text-center mb-5">
                                        <a href="index.html" class="text-dark font-size-22 font-family-secondary">
                                            <i class="mdi mdi-album"></i> <b>SRMA</b>
                                        </a>
                                    </div>
                                    <h1 class="h5 mb-1">Recuperar tu contraseña</h1>
                                    <p class="text-muted mb-4">Ingresa tu correo electronico y se te enviarán las intrucciones para recuperar la contraseña.</p>
                                    @using (Html.BeginForm("ChangePassword", "Login", FormMethod.Post, new { @class = "pt-3" }))
                                    {
                                        @ViewBag.MensajePantalla

                                        @Html.HiddenFor(m => m.IdUserEncrypt)
                                        <div class="form-group">
                                            @Html.TextBoxFor(m => m.tempPassword, new {@class = "form-control form-control-lg", @placeholder="Contraseña Temporal", @Type="password" })
                                        </div>
                                        <div class="form-group">
                                            @Html.TextBoxFor(m => m.passwordU, new {@class = "form-control form-control-lg", @placeholder="Contraseña Nueva", @Type="password" })
                                        </div>
                                        <div class="mt-3">
                                            <input type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" value="Recuperar contraseña">
                                        </div>
                                    }


                                    <!-- end row -->
                                </div> <!-- end .padding-5 -->
                            </div> <!-- end col -->
                        </div> <!-- end row -->
                    </div> <!-- end .w-100 -->
                </div> <!-- end .d-flex -->
            </div> <!-- end col-->
        </div> <!-- end row -->
    </div>
    <!-- end container -->
</div>
