@model IEnumerable<SRMA.Entities.FidelityProEntity>
@{
    ViewData["Title"] = "Programa de lealtad";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="main-content">

    <div class="page-content">
        <div class="container-fluid">
        </div>
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title text-center">Programa de Fidelidad</h4>
                      
                       

                        <table id="basic-datatable" class="table table-striped dt-responsive nowrap">
                            <thead>
                                <tr>
                                    <th>Código Unico</th>
                                    <th>Nombre</th>
                                    <th>Apellido</th>
                                    <th>Puntos</th>
                                    <th>Fecha de registro</th>
                                    <th>Canjear Puntos</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="table-user">@item.codeU</td>
                                        <td>@item.userName</td>
                                        <td>@item.lastName</td>
                                        <td>@item.earnedPoints</td>
                                        <td class="table-user">@item.startDate.ToString("yyyy-MM-dd")</td>
                                        <td>
                                        @if (item.earnedPoints <= 0)
                                           {
                                            <a>No hay puntos para canjear.</a>
                                            }
                                            else
                                            {
                                                <a href="@Url.Action("RedimirPuntos","LoyaltyProgram", new {UserId = item.IdUser })" class="btn btn-primary" data-toggle="tooltip" data-placement="bottom" title="Canjear puntos">
                                                    <i class="fas fa-gift"></i>
                                                </a>

                                            }
                                        </td>
                                    </tr>

                                }

                            </tbody>
                        </table>

                    </div> <!-- end card body-->
                </div> <!-- end card -->
            </div><!-- end col-->
        </div>
        <!-- end row-->

    </div> <!-- container-fluid -->
</div>
<div class="modal" id="confirmationModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirmación</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>¿Estás seguro de que deseas eliminar este producto?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-danger" id="confirmDelete">Eliminar</button>
            </div>
        </div>
    </div>
</div>

<!-- jQuery -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        $('[data-toggle="tooltip"]').tooltip();
    });
</script>
