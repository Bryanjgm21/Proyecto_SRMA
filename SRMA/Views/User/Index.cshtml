                            <div id="map"></div>
                            <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
                            <script>
                                // Coordenadas de la ubicación que quieres mostrar
                                var ubicacion = { lat: 10.013324122388203, lng: -84.15366957860495 };

                                // Crear un nuevo mapa y centrarlo en la ubicación
                                var map = L.map('map').setView(ubicacion, 17);

                                // Añadir un mapa base de OpenStreetMap
                                L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                                    attribution: '© OpenStreetMap contributors'
                                }).addTo(map);

                                // Colocar un marcador en la ubicación
                                L.marker(ubicacion).addTo(map)
                                    .bindPopup('Manos de Angel Restaurante')
                                    .openPopup();
                            </script>
