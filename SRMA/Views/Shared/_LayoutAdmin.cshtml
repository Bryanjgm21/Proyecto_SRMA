<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SRMA</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SRMA.styles.css" asp-append-version="true" />
    <!-- App favicon -->
    <link rel="shortcut icon" href="~/Theme/assets/images/favicon.ico">
    <!-- Plugins css -->
    <link href="~/Theme/plugins/datatables/dataTables.bootstrap4.css" rel="stylesheet" type="text/css" />
    <link href="~/Theme/plugins/datatables/responsive.bootstrap4.css" rel="stylesheet" type="text/css" />
    <link href="~/Theme/plugins/datatables/buttons.bootstrap4.css" rel="stylesheet" type="text/css" />
    <link href="~/Theme/plugins/datatables/select.bootstrap4.css" rel="stylesheet" type="text/css" />

    <!-- App css -->
    <link href="~/Theme/assets/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Theme/assets/css/icons.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Theme/assets/css/theme.min.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@10.15.5/dist/sweetalert2.min.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10.15.5/dist/sweetalert2.all.min.js"></script>
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

    <!-- Bootstrap JavaScript -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</head>

<body>
    @RenderSection("scripts", required: false)
    <!-- Begin page -->
    <div id="layout-wrapper">
        @RenderBody()
        <header id="page-topbar">
            <div class="navbar-header">
                <!-- LOGO -->
                <div class="navbar-brand-box d-flex align-items-left">
                    <a href="@Url.Action("AdminDashboard","Admin")" class="logo">
                        <i class="mdi mdi-album"></i>
                        <span>
                            SRMA - Admin
                        </span>
                    </a>

                    <button type="button" class="btn btn-sm mr-2 d-lg-none px-3 font-size-16 header-item waves-effect waves-light" id="vertical-menu-btn">
                        <i class="fa fa-fw fa-bars"></i>
                    </button>
                </div>

                <a href="@Url.Action("AdminDashboard","Admin")" class="logo">
                    <span>
                        <img href="@Url.Action("AdminDashboard","Admin")" src="~/Theme/assets/images/users/Logoma2.png"
                             class="mr-8 rounded-circle avatar-xl align-items-center">
                    </span>
                </a>

                <div class="d-flex align-items-center">
                    <div class="dropdown d-inline-block ml-2">
                        <button type="button" class="btn header-item waves-effect waves-light" id="page-header-user-dropdown"
                                data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="mdi mdi-account waves-effect waves-light" style="color: white; font-size: 250%;"></i>
                            <i class="mdi mdi-chevron-down d-none d-sm-inline-block"></i>
                        </button>
                        @*HACER UNA VISTA PARA EDITAR O ELIMINAR LA CUENTA DE ADMIN*@
                        <div class="dropdown-menu dropdown-menu-right">
                            <a class="dropdown-item d-flex align-items-center justify-content-between" href="@Url.Action("Profile","Admin")">
                                <span>Perfil</span>
                                <span>
                                </span>
                            </a>
                            <a class="dropdown-item d-flex align-items-center justify-content-between" href="@Url.Action("LogOut","Login")">
                                <span>Cerrar sesión</span>
                            </a>
                        </div>
                    </div>

                </div>
            </div>
        </header>

        <!-- ========== Left Sidebar Start ========== -->
        <div class="vertical-menu">

            <div data-simplebar class="h-100">

                <!--- Sidemenu -->
                <div id="sidebar-menu">
                    <!-- Left Menu Start -->
                    <ul class="metismenu list-unstyled" id="side-menu">
                        <li class="menu-title">Menú</li>

                        <li>
                            <a href="@Url.Action("AdminDashboard","Admin")" class="waves-effect"><i class="feather-airplay"></i><span>Inicio</span></a>
                        </li>
                        <li>
                            <a href="@Url.Action("AdminReservation","Reservation")" class="waves-effect"><i class="fas fa-receipt"></i><span>Reservaciones</span></a>
                        </li>
                        <li>
                            <a href="@Url.Action("Index","Employee")" class="waves-effect"><i class="fas fa-user-tie"></i><span>Empleados</span></a>
                        </li>
                        <li>
                            <a href="@Url.Action("Vacation","Employee")" class="waves-effect"><i class="fas fa-plane"></i><span>Vacaciones</span></a>
                        </li>
                        <li>
                            <a href="@Url.Action("Absence","Employee")" class="waves-effect"><i class="fas fa-user-slash"></i><span>Ausencias</span></a>
                        </li>
                        <li>
                            <a href="@Url.Action("Index","Product")" class="waves-effect"><i class="fas fa-box-open"></i><span>Inventario</span></a>
                        </li>
                        <li>
                            <a href="@Url.Action("AdminLoyaltyProgram","LoyaltyProgram")" class="waves-effect"><i class="fas fa-gift"></i><span>Programa de lealtad</span></a>
                        </li>
                        <li>
                            <a href="@Url.Action("Clients","Admin")" class="waves-effect"><i class="fas fa-user"></i><span>Clientes</span></a>
                        </li>
                    </ul>
                </div>


                <div class="help-box">
                    <h5 class="text-muted font-size-15 mb-3">Ayuda y soporte.</h5>
                    <p class="font-size-13"><span class="font-weight-bold">Coreo electronico:</span> <br> SRMAsupport@SRMA.com</p>
                    <p class="mb-0 font-size-13"><span class="font-weight-bold">Call:</span> <br> 26556688 </p>
                </div>
            </div>
            <!-- Sidebar -->
        </div>
    </div>
    <!-- Left Sidebar End -->
    <!-- ============================================================== -->
    <!-- Start right Content here -->
    <!-- ============================================================== -->

    <br />
    <br />
    <br />
    <br />
    <footer class="footer" style="max-width: 85%; margin: 0 auto;">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-6">
                    &copy; @DateTime.Now.Year SRMA
                </div>
                <div class="col-sm-6">
                    <div class="text-sm-right d-none d-sm-block">
                        Diseñado y desarrollado por SRMA.
                    </div>
                </div>
            </div>
        </div>
    </footer>

    </div>
    <!-- end main content-->
    </div>
    <!-- END layout-wrapper -->
    <!-- Overlay-->
    <div class="menu-overlay"></div>


    <!-- jQuery  -->
    <script src="~/Theme/assets/js/jquery.min.js"></script>
    <script src="~/Theme/assets/js/bootstrap.bundle.min.js"></script>
    <script src="~/Theme/assets/js/metismenu.min.js"></script>
    <script src="~/Theme/assets/js/waves.js"></script>
    <script src="~/Theme/assets/js/simplebar.min.js"></script>

   
    <!-- third party js -->
    <script src="~/Theme/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/Theme/plugins/datatables/dataTables.bootstrap4.js"></script>
    <script src="~/Theme/plugins/datatables/dataTables.responsive.min.js"></script>
    <script src="~/Theme/plugins/datatables/responsive.bootstrap4.min.js"></script>
    <script src="~/Theme/plugins/datatables/dataTables.buttons.min.js"></script>
    <script src="~/Theme/plugins/datatables/buttons.bootstrap4.min.js"></script>
    <script src="~/Theme/plugins/datatables/buttons.html5.min.js"></script>
    <script src="~/Theme/plugins/datatables/buttons.flash.min.js"></script>
    <script src="~/Theme/plugins/datatables/buttons.print.min.js"></script>
    <script src="~/Theme/plugins/datatables/dataTables.keyTable.min.js"></script>
    <script src="~/Theme/plugins/datatables/dataTables.select.min.js"></script>
    <script src="~/Theme/plugins/datatables/pdfmake.min.js"></script>
    <script src="~/Theme/plugins/datatables/vfs_fonts.js"></script>

    
    <!-- Sparkline Js-->
    <script src="~/Theme/plugins/jquery-sparkline/jquery.sparkline.min.js"></script>

    <!-- Chart Js-->
    <script src="~/Theme/plugins/jquery-knob/jquery.knob.min.js"></script>

    <!-- Morris Js-->
    <script src="~/Theme/plugins/morris-js/morris.min.js"></script>
    <!-- Raphael Js-->
    <script src="~/Theme/plugins/raphael/raphael.min.js"></script>

    <!-- Custom Js -->
    <script src="~/Theme/assets/pages/dashboard-demo.js"></script>

    <!-- App js -->
    <script src="~/Theme/assets/js/theme.js"></script>


</body>

</html>
