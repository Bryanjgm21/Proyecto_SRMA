@model IEnumerable<SRMA.Entities.ReservationEntity>

@{
    ViewData["Title"] = "AdminReservation";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<html>
<body>
    <div class="main-content">

        <div class="page-content">
            <div class="container-fluid">
            </div>
            <div class="row">
                <div class="col-xl-10">
                    <div class="card">
                        <div class="card-body">
                            @if (ViewBag.MsjError != null)
                            {
                                <div style="color:#dc3545">
                                    @ViewBag.MsjError
                                </div>
                            }
                            <h2 class="card-title text-center">Reservaciones</h2>
                            <div class="input-group">
                                <div class="input-group-append">
                                </div>
                            </div>
                            <div>

                            </div>
                            <div class="table-responsive">
                                <table class="table table-centered table-striped table-nowrap">
                                    <thead>
                                        <tr>
                                            <th>id</th>
                                            <th>Nombre</th>
                                            <th>Apellido</th>
                                            <th>Fecha</th>
                                            <th>Hora</th>
                                            <th>Cantidad</th>
                                            <th>Observaciones</th>
                                            <th>Estado</th>
                                            <th>Acciones</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{
                                            var sortedModel = Model.OrderBy(item => Math.Abs((item.dateReservation - DateTime.Now).TotalDays));
                                        }
                                        @foreach (var item in sortedModel)
                                        {
                                            <tr>
                                                <td>@item.IdReservation</td>
                                                <td class="table-user">@item.userName</td>
                                                <td>@item.lastName</td>
                                                <td class="table-user">@item.dateReservation.ToString("yyyy-MM-dd")</td>
                                                <td>@item.dateReservation.ToString("HH:mm:ss")</td>
                                                <td>@item.quantity</td>
                                                <td>@item.observations</td>

                                                @if (item.statusReser == true && item.dateReservation > DateTime.Now)
                                                {
                                                    <td>Activa</td>
                                                }
                                                else
                                                {
                                                    <td>Inactiva</td>

                                                }

                                                @if (item.dateReservation > DateTime.Now && item.statusReser == true)
                                                {
                                                    <td>
                                                        <a href="@Url.Action("AdminEdit","Reservation", new { q = item.IdReservation })" class="btn btn-info">
                                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
                                                                <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z"></path>
                                                            </svg>
                                                        </a>
                                                        <button class="btn btn-danger insertar-puntos" data-employee-id="@item.IdUser">
                                                            <svg xmlns="http://www.w3.org/2000/svg" height="16" width="14" viewBox="0 0 448 512">
                                                                <path d="M438.6 105.4c12.5 12.5 12.5 32.8 0 45.3l-256 256c-12.5 12.5-32.8 12.5-45.3 0l-128-128c-12.5-12.5-12.5-32.8 0-45.3s32.8-12.5 45.3 0L160 338.7 393.4 105.4c12.5-12.5 32.8-12.5 45.3 0z" />
                                                            </svg>
                                                        </button>

                                                    </td>

                                                }
                                                else
                                                {
                                                   

                                                }

                                                
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>

                        </div> <!-- end card-body-->
                    </div> <!-- end card-->
                </div> <!-- end col -->
            </div>
            <!-- end row-->

        </div> <!-- container-fluid -->
    </div>
    <script>
        $(document).ready(function () {
            var employeeIdToDelete;

            $(".insertar-puntos").click(function () {
                employeeIdToDelete = $(this).data("employee-id");

                // Utiliza SweetAlert para mostrar el pop-up de confirmación
                Swal.fire({
                    title: '¿Estás seguro?',
                    text: "Esta acción no se puede deshacer",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonText: 'Sí',
                    cancelButtonText: 'Cancelar'
                }).then((result) => {
                    if (result.isConfirmed) {
                        // Realizar una solicitud POST para eliminar el producto
                        $.ajax({
                            url: "@Url.Action("InsertPoints", "Reservation")",
                            method: "POST",
                            data: { IdUser: employeeIdToDelete },
                            success: function (result) {
                                // Manejar la respuesta del servidor
                                if (result.success) {
                                    Swal.fire('Error', 'No se pudo activar', 'error');
                                } else {
                                    Swal.fire('Éxito', 'Se ha activado la reserva', 'success').then(function () {
                                        window.location.href = "@Url.Action("AdminReservation")";
                                    });
                                }
                            },
                            error: function () {
                                Swal.fire('Error', 'Hubo un error en la solicitud', 'error');
                            }
                        });
                    }
                });
            });
        });
    </script>

</body>
</html>
